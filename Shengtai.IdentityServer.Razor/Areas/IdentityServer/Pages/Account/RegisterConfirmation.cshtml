@page
@inject Shengtai.IdentityServer.IAppSettings AppSettings
@model RegisterConfirmationModel
@{
    Layout = "_BlankLayout";
    ViewBag.Title = "Register confirmation";
}
}
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href='@Url.Content("~/")' class="h1"><b>@AppSettings.IdentityServer.ApplicationName</b></a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">@ViewData["Title"]</p>
                @{
                    <p>Your ClientId:@Model.ClientId</p>
                    <p>Your ClientSecret:@Model.ClientSecret</p>
                    <p>Your Scope:@Model.Scope</p>
                    <p>
                        Please check your email to confirm your account.
                    </p>
                }
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/_BlankLayoutScriptsPartial.cshtml")
</body>