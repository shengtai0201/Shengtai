@page
@inject Shengtai.IdentityServer.IAppSettings AppSettings
@model ForgotPasswordModel
@{
    Layout = "_BlankLayout";
    ViewBag.Title = "Forgot your password?";
}
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href='@Url.Content("~/")' class="h1"><b>@AppSettings.IdentityServer.ApplicationName</b></a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>
                <form method="post">
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(m => m.Input.Email, new { type = "email", @class = "form-control", placeholder = "電子郵件" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Request new password</button>
                        </div>
                    </div>
                </form>
                <p class="mt-3 mb-1">
                    <a href='@Url.Content("~/IdentityServer/Account/Login")'>Login</a>
                </p>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/_BlankLayoutScriptsPartial.cshtml")
</body>